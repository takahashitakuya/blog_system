<div class="container">
    <div class="row">
        <section id="main-col" class="col s12">
            <article class="post-item">
            <header class="post-header">
                <h1 class="post-title"><%= @post.title %></h1>
                <div class="post-meta">
                   <time class="post-date"> <%= @post.created_at %></time>
                </div>
            </header>
            
            <div class="post-body">
                <%== @post.body %>
            </div>
            
            <footer class="post-footer">
            <%= link_to '編集' ,edit_post_path(@post),:class=>"waves-effect waves-light btn" %>
            <%= link_to "削除", post_path(@post), method: :delete,:class=>"waves-effect waves-light btn red" %>
                
            </footer>
            </article>
            
        </section>
        <aside id="side-col" class="col s4">
            
            
        </aside>
    </div>
</div>