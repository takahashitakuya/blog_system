<div class="container">
    <div class="row">
        <section id="main-col" class="col s8">
            <article class="post-item">
            <header class="post-header">
                <h1 class="post-title"><%= @category.name %></h1>
                <div class="post-meta">
                   <time class="post-date"> <%= @category.created_at %></time>
                </div>
            </header>
            
            <div class="post-body">
                <table class="bordered">
                    <% if @category.parent_category_id != nil then %>
                    <tr>
                        <th>親カテゴリー : </th>
                        <td><%= Category.find(@category.parent_category_id).name %></td>
                    </tr>
                    <% end %>
                    <tr>
                        <th>SLUG : </th>
                        <td><%= @category.slug %></td>
                    </tr>                  
                    
                </table>

            </div>
            <footer class="post-footer">
               <%= link_to '編集' ,edit_category_path(@category),:class=>"waves-effect waves-light btn" %>
                <%= link_to "削除", category_path(@category), method: :delete,:class=>"waves-effect waves-light btn red" %>             
            </footer>            
            
            </article>


        </section>
        <aside id="side-col" class="col s4">
            
            
        </aside>
    </div>
</div>